@{
    ViewBag.Title = "ShoujianAddress";
}

<form class="form-horizontal">
    <div id="Edit-modal" class="modal fade">
        <div class="modal-dialog" style="width:900px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">关闭</span></button>
                    <h4 class="modal-title">收件地址</h4>
                </div>
                <div class="modal-body">
                    <table class="table table-striped table-bordered table-hover">
                        <tr class="tr-fir">
                            <td class="td-tit tar" style="width:10%">收件人</td>
                            <td style="width:20%">
                                所在地
                            </td>
                            <td class="td-tit tar">详细地址</td>
                            <td class="td-tit tar">邮编</td>
                            <td>手机</td>
                            <td>状态</td>
                        </tr>

                        @{
                            List<Yax.Model.Address> listaddress = ViewBag.listaddress;
                            if (listaddress != null && listaddress.Count > 0)
                            {
                                for (int i = 0; i < listaddress.Count; i++)
                                {
                                                   <tr class="tr-fir">
                            <td class="td-tit tar" style="width:10%">@listaddress[i].ReceiveName</td>
                            <td style="width:20%">
                                @listaddress[i].Province > @listaddress[i].City > @listaddress[i].Town
                            </td>
                            <td class="td-tit tar">@listaddress[i].DetailAddress</td>
                            <td class="td-tit tar">@listaddress[i].AddressCode</td>
                            <td>@listaddress[i].Phone</td>
                            <td>
                                @if (listaddress[i].ID == listaddress[i].Addressid)
                                {
                                    <span>默认</span> 
                                }
                            </td>
                        </tr>
                                } 
                            }
                        }

                    </table>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</form>
<script type="text/javascript">
    $('#Edit-modal').modal('show');
</script>
