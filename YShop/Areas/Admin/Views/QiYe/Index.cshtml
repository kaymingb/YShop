@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@model List<Yax.Model.QiYe_LiuYan>
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h3 class="page-header">客户留言</h3>
    <div class="content">


        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th width="30px" style="display:none">
                        <input id="checkall" type="checkbox" data-toolbar=".btn-toolbar" data-target="[name=ID]" data-toggle="checkall">
                    </th>
                    <th>
                        ID
                    </th>
                    <th>
                        标题
                    </th>
                    <th>
                        姓名
                    </th>
                    <th>
                        手机号
                    </th>
                    <th>
                        内容
                    </th>
                    <th>
                        时间
                    </th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>

                @{
                    if (Model != null && Model.Count > 0)
                    {


                        for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td width="30px" style="display:none"><input type="checkbox" name="ID" value="1267"></td>
                                <td>
                                    @Model[i].ID
                                </td>
                                <td>
                                    @Model[i].Title
                                </td>
                                <td>
                                    @Model[i].Name
                                </td>
                                <td>
                                    @Model[i].Phone
                                </td>
                                <td>
                                    @(Yax.Common.Utils.GetSubstring(Model[i].Detail,50,"......")) 
                                </td>
                                <td>
                                    @Model[i].AddTime
                                </td>
                                <td>
                                    <a class="btn btn-success btn-xs" onclick="det(@Model[i].ID)" title="详细">详细</a>
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
        @Html.Raw(ViewBag.PageStr)

    </div>
</div>

<script>
    function det(id)
    {
        $loadModal('/admin/qiye/LiuYanDetail?id='+id);
    }

</script>