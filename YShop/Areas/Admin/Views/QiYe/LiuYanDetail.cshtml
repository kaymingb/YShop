@{
    Layout = null;
}

<form class="form-horizontal">
    <div id="Edit-modal" class="modal fade">
        <div class="modal-dialog" style="width:700px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">关闭</span></button>
                    <h4 class="modal-title">详细</h4>
                </div>
                <div class="modal-body">
                    <table class="table table-striped table-bordered table-hover">
                        <tr class="tr-fir">
                            <td class="td-tit tar">标题</td>
                            <td colspan="3">@ViewBag.Title</td>
                        </tr>
                        <tr class="tr-sec">
                            <td class="td-tit tar">姓名</td>
                            <td colspan="3" class="wordbreak">@ViewBag.Name</td>
                        </tr>
                        <tr class="tr-fir">
                            <td class="td-tit tar">Email</td>
                            <td colspan="3" class="wordbreak">@ViewBag.Email</td>
                        </tr>
                        <tr class="tr-fir">
                            <td class="td-tit tar">时间</td>
                            <td colspan="3" class="wordbreak">@ViewBag.AddTime</td>
                        </tr>
                        <tr class="tr-fir">
                            <td class="td-tit tar">详细</td>
                            <td colspan="3" class="wordbreak">@ViewBag.Detail</td>
                        </tr>
                    </table>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</form>
<script type="text/javascript">
    $('#Edit-modal').modal('show');
</script>