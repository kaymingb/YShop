@{
    ViewBag.Title = "TiXian";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<Yax.Model.TiXian>
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h3 class="page-header">提现列表</h3>
    <div class="content">


        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th width="30px" style="display:none">
                        <input id="checkall" type="checkbox" data-toolbar=".btn-toolbar" data-target="[name=ID]" data-toggle="checkall">
                    </th>
                    <th>
                        ID
                    </th>
                    <th>
                        订单号
                    </th>
                    <th>
                        用户名
                    </th>
                    <th>
                        手机
                    </th>
                    <th>
                        银行
                    </th>
                    <th>
                        收款账户
                    </th>
                    <th>
                        金额
                    </th>
                    <th>
                        时间
                    </th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>

                @{
                    if (Model != null && Model.Count > 0)
                    {


                        for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td width="30px" style="display:none"><input type="checkbox" name="ID" value="1267"></td>
                                <td>
                                    @Model[i].ID
                                </td>
                                <td>
                                    @Model[i].OrderNO
                                </td>
                                <td>
                                    @Model[i].RealName
                                </td>
                                <td>
                                    @Model[i].Phone
                                </td>
                                <td>
                                    @Model[i].BankName
                                </td>
                                <td>
                                    @Model[i].BankNO
                                </td>
                                <td>
                                    @Model[i].Money
                                </td>
                                <td>
                                    @Model[i].AddTime
                                </td>
                                <td>
                                    <a class="btn btn-danger btn-xs" onclick="DelTiXian(@Model[i].ID)" title="删除">删除</a>
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
        @Html.Raw(ViewBag.PageStr)
    </div>
</div>

<script>

    function DelTiXian(id)
    {
        if(confirm("确定要删除？")){
            $.post("/admin/BankCard/DelTiXian?id=" + id, "", function (res) {
                alert(res);
                location.reload();
            })
        }

    }

</script>