@{
    Layout = null;
}

<form action="/admin/menu/create" method="post" class="form-horizontal" id="_ModalForm">
    <div id="Edit-modal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">关闭</span></button>
                    <h4 class="modal-title">提现密码</h4>
                </div>
                <div class="modal-body">
                    <div class="error-panel"></div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">订单号</label>
                        <div class="col-sm-9">
                            <input type="text" value="@ViewBag.OrderNO" id="RealName" name="RealName" readonly="readonly" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">提现密码</label>
                        <div class="col-sm-9">
                            <input type="text" value="@ViewBag.TiKuanPWD" id="TiKuanPWD" name="TiKuanPWD" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">通知短信</label>
                        <div class="col-sm-9">
                        <textarea  style="height:100px;text-align:left;" name="msg" id="msg" class="form-control">@ViewBag.msg</textarea>

                    </div>
                </div>
                <input type="hidden" name="id" id="id" value="@ViewBag.ID"/>
                    <input type="hidden" name="UserName" id="UserName" value="@ViewBag.UserName" />
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" onclick="dosub()" class="btn btn-primary">提交</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
 </div>
</form>

<style>
    input, select, textarea {
        max-width: 400px;
    }
</style>

@*<script src="~/Content/js/jquery-1.10.2.min.js"></script>*@
<script type="text/javascript">


    $('#Edit-modal').modal('show');
    function dosub() {
        var TiKuanPWD = $("#TiKuanPWD").val();
        if (TiKuanPWD == "")
        {
            alert('请填写密码');
            return;
        }
        var datamenu = $("#_ModalForm").serialize();
        $.post("/admin/BankCard/TiXianMImaPost", datamenu, function (res) {
            alert(res);
            location.reload();
        })
    }
</script>

