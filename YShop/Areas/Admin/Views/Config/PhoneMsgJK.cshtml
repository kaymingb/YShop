@{
    ViewBag.Title = "PhoneMsgJK";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h3 class="page-header">短信接口设置</h3>
    <div id="error-panel"></div>
    <div id="container" class="table-responsive">
        <form class="form-inline" id="_ModalForm">
            <table class="table table-striped table-hover table-bordered">
                <tr>
                    <td style="width:150px">
                        短信账户
                    </td>
                    <td colspan="5"><input class="form-control" name="QIYeID" id="QIYeID" type="text" value="@ViewBag.QIYeID" /></td>
                </tr>
                <tr>
                    <td>
                        短信接口密码
                    </td>
                    <td colspan="5">
                        <input class="form-control" name="Pwd" id="Pwd"
                               placeholder="" type="text" value="@ViewBag.Pwd" />
                    </td>
                </tr>
                <tr>
                    <td>
                        前缀
                    </td>
                    <td colspan="5">
                        <input class="form-control" name="ContentPre" id="ContentPre"
                               placeholder="" type="text" value="@ViewBag.ContentPre" />
                    </td>
                </tr>
                <tr>
                    <td>
                        网关地址
                    </td>
                    <td colspan="5">
                        <input class="form-control" name="URL" id="URL"
                               placeholder="" type="text" value="@ViewBag.URL" />
                    </td>
                </tr>
            </table>
            <div>
                <button type="button" onclick="dosub()" class="btn btn-primary">提交</button>
            </div>
        </form>
    </div>
</div>

<style>
    input {
        width: 400%;
        max-width: 100%;
    }

    input, select, textarea {
        max-width: 100%;
    }
</style>

<link href="~/plug/kindeditor/themes/default/default.css" rel="stylesheet" />
<link href="~/plug/kindeditor/plugins/code/prettify.css" rel="stylesheet" />
<script src="~/plug/kindeditor/kindeditor-min.js"></script>
<script src="~/plug/kindeditor/lang/zh_CN.js"></script>





<script type="text/javascript">
    function dosub() {
        //alert($("#Content").val());
        //return;
        var data = $("#_ModalForm").serialize();
        $.post("/admin/config/PhoneMsgJKPost", data, function (res) {
            alert(res);
            location.reload();
        })
    }
</script>
