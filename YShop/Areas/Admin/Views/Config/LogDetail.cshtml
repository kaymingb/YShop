
@{
    ViewBag.Title = "系统-日志详细";
    Layout = null;
}
<form class="form-horizontal">
    <div id="Edit-modal" class="modal fade">
        <div class="modal-dialog" style="width:820px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">关闭</span></button>
                    <h4 class="modal-title">详细日志</h4>
                </div>
                <div class="modal-body">
                    <table class="table table-striped table-bordered table-hover">
                        <tr class="tr-fir">
                            <td class="td-tit tar" style="width:10%">日志类型</td>
                            <td style="width:20%">
                                @if (ViewBag.type == 0)
                                {
                                     <span>登录日志</span>
                                }
                                else if (ViewBag.type == 1)
                                {
                                    <span>操作日志</span>
                                }
                                else if (ViewBag.type == 2)
                                {
                                    <span>系统日志</span>
                                }
                            </td>
                            <td class="td-tit tar" style="width:10%">添加人</td>
                            <td style="width:20%">@ViewBag.userName</td>
                        </tr>
                        <tr class="tr-sec">
                            <td class="td-tit tar">添加时间</td>
                            <td>@ViewBag.addtime</td>
                            <td class="td-tit tar">IP</td>
                            <td>@ViewBag.ip</td>
                        </tr>
                        <tr class="tr-fir">
                            <td class="td-tit tar">浏览器</td>
                            <td colspan="3">@ViewBag.browser</td>
                        </tr>
                        <tr class="tr-sec">
                            <td class="td-tit tar">操作页面</td>
                            <td colspan="3" class="wordbreak">@ViewBag.url</td>
                        </tr>
                        <tr class="tr-fir">
                            <td class="td-tit tar">详细</td>
                            <td colspan="3" class="wordbreak">@ViewBag.memo</td>
                        </tr>
                    </table>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</form>
<script type="text/javascript">
    $('#Edit-modal').modal('show');
</script>