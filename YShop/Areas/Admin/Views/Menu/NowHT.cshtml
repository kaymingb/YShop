@{
    ViewBag.Title = "NowHT";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h3 class="page-header">配置后台 </h3>
    <div class="content">
        <form action="" class="form-inline" method="get">
            <div>
                <div class="form-group">
                    <div class="input-group">
                        <select class="form-control" name="htmenutype" id="htmenutype" >
                            <option @(ViewBag.htmenutype=="KaiFaAdminMenu"?"selected=selected":"") value="KaiFaAdminMenu">开发后台</option>
                            <option @(ViewBag.htmenutype== "QiYeAdminMenu" ? "selected=selected":"") value="QiYeAdminMenu">企业后台</option>
                            <option @(ViewBag.htmenutype== "PuHuiAdminMenu" ? "selected=selected":"")  value="PuHuiAdminMenu">普惠后台</option>
                            <option @(ViewBag.htmenutype == "DongManAdminMenu" ? "selected=selected" : "") value="DongManAdminMenu">动漫后台</option>
                            <option @(ViewBag.htmenutype == "CHWYuDing" ? "selected=selected" : "") value="CHWYuDing">游艇预定后台</option>
                            <option @(ViewBag.htmenutype == "AMHVedio" ? "selected=selected" : "") value="AMHVedio">视频管理</option>
                            <option @(ViewBag.htmenutype == "ThridPay" ? "selected=selected" : "") value="ThridPay">第三方支付系统</option>
                        </select>
                    </div>
                </div>
            </div>
            <br>
        </form>
        <div class="btn-toolbar">
            <div class="btn-group" role="group">
                <button type="button" onclick="dohtpost()" class="btn btn-primary">设置</button>
            </div>
        </div>
    </div>
</div>




<script>
    function dohtpost() {
        var htmenutype = $("#htmenutype").val();
        $.post("/menu/NowHTPost?htmenutype=" + htmenutype, "", function (res) {
            alert(res);
            location.reload();
        })
    }
</script>