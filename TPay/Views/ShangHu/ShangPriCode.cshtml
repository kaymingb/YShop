
@{
    ViewBag.Title = "ShangPriCode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h3 class="page-header">商户密钥</h3>
    <div id="error-panel"></div>
    <div id="container" class="table-responsive">
        <form class="form-inline" id="_ModalForm">
            <table class="table table-striped table-hover table-bordered">
                <tr>
                    <td style="width:150px">
                        商户密钥
                    </td>
                    <td ><input readonly="readonly" class="form-control" type="text" value="@ViewBag.PayKey" /></td>
                    <td style="width:150px">
                        <button type="button" onclick="dosub('')" class="btn btn-primary">重新生成</button>
                    </td>
                </tr>
                <tr>
                    <td colspan="3" style="color:red">
                       备注： 重新生成之后请及时配置好商户系统的密钥
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>

<style>
    input {
        width: 400%;
        max-width: 100%;
    }

    input, select, textarea {
        max-width: 100%;
    }
</style>

<link href="~/plug/kindeditor/themes/default/default.css" rel="stylesheet" />
<link href="~/plug/kindeditor/plugins/code/prettify.css" rel="stylesheet" />
<script src="~/plug/kindeditor/kindeditor-min.js"></script>
<script src="~/plug/kindeditor/lang/zh_CN.js"></script>





<script type="text/javascript">
    function dosub() {
        //alert($("#Content").val());
        //return;
        if (confirm("确定要重新生成密钥？")) {
            var data = $("#_ModalForm").serialize();
            $.post("/ShangHu/ShangPriCodePost", data, function (res) {
                alert(res);
                location.reload();
            })
        }
  
    }
</script>


